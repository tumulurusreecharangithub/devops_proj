- name: Demo on Play vars
  hosts: all
  vars:
   URL: play.example.com
  tasks:
   - name: Print URL
     ansible.builtin.debug:
      msg: URL == {{ URL }}

- name: Demo on play vars
  hosts: all
  vars_files: demo-vars.yml
  tasks:
   - name: Print URL
     ansible.builtin.debug:
      msg: URL =={{ URL }}
	  
- name: Demo on task_level_Variables
  hosts: all
  tasks:
   - name: print URL
     ansible.builtin.debug:
	msg: URL == {{URL}}
     vars:
      URL: take.example.com
